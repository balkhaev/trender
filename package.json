{
  "name": "trender",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "1.4.5",
      "@prisma/client": "^7.1.0"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:scrapper": "turbo -F @trender/scrapper dev",
    "setup:scrapper": "turbo -F @trender/scrapper setup",
    "dev:video-frames": "turbo -F @trender/video-frames dev",
    "setup:video-frames": "turbo -F @trender/video-frames setup",
    "db:push": "turbo -F @trender/db db:push",
    "db:studio": "turbo -F @trender/db db:studio",
    "db:generate": "turbo -F @trender/db db:generate",
    "db:migrate": "turbo -F @trender/db db:migrate",
    "db:start": "turbo -F @trender/db db:start",
    "db:watch": "turbo -F @trender/db db:watch",
    "db:stop": "turbo -F @trender/db db:stop",
    "db:down": "turbo -F @trender/db db:down",
    "db:reset": "turbo -F @trender/db db:reset"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.8",
    "ultracite": "6.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}
